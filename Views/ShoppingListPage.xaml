<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:ShoppingList.ViewModels"
             xmlns:models="clr-namespace:ShoppingList.Models"
             x:Class="ShoppingList.Views.ShoppingListPage"
             x:DataType="viewModels:ShoppingListViewModel"
             x:Name="RootPage"
             Title="Lista Zakupow">
    <ContentPage.BindingContext>
        <viewModels:ShoppingListViewModel />
    </ContentPage.BindingContext>

    <Grid Padding="10" RowSpacing="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" /> 
            <RowDefinition Height="*" />   
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Text="Dodaj Produkt" Clicked="OnAddItemClicked" />

        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding Items}"
                        SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:ListItemModel">
                    <Border x:Name="Item" Margin="5" Padding="10">
                        <FlyoutBase.ContextFlyout>
                            <MenuFlyout BindingContext="{Binding Source={x:Reference Item}, Path=BindingContext}">
                                <MenuFlyoutItem Text="Usuń"
                                                Clicked="ContextMenuHandler"
                                                CommandParameter="{Binding .}" 
                                                StyleId="Delete" />
                                <MenuFlyoutItem Text="Oznacz jako kupione"
                                                Clicked="ContextMenuHandler"
                                                CommandParameter="{Binding .}" 
                                                StyleId="MarkAsBought" />
                                <MenuFlyoutSubItem Text="Opcje Ilości">
                                    <MenuFlyoutItem Text="Zmniejsz" />
                                    <MenuFlyoutItem Text="Zwiększ" />
                                </MenuFlyoutSubItem>
                            </MenuFlyout>
                        </FlyoutBase.ContextFlyout>

                        <VerticalStackLayout Spacing="6">
                            <Label x:Name="ItemName" Text="{Binding Name}" FontSize="18">
                                <Label.Triggers>
                                    <DataTrigger TargetType="Label" Binding="{Binding IsBought}" Value="True">
                                        <Setter Property="TextDecorations" Value="Strikethrough" />
                                    </DataTrigger>
                                    <DataTrigger TargetType="Label" Binding="{Binding IsBought}" Value="False">
                                        <Setter Property="TextDecorations" Value="None" />
                                    </DataTrigger>
                                </Label.Triggers>
                            </Label>
                            <HorizontalStackLayout Spacing="0">
                                <Label Text="{Binding Amount, StringFormat='Ilosc: {0}'}" />
                                <Label Text="{Binding Unit, StringFormat='{0}'}" />
                            </HorizontalStackLayout>
                            <Label Text="{Binding Category, StringFormat='Kategoria: {0}'}" >
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OpenCategoryView"
                                                          CommandParameter="{Binding Category}" />
                                </Label.GestureRecognizers>
                            </Label>
                        </VerticalStackLayout>

                        <Border.Triggers>
                            <DataTrigger TargetType="Border" Binding="{Binding IsBought}" Value="True">
                                <Setter Property="Opacity" Value="0.7" />
                            </DataTrigger>
                            <DataTrigger TargetType="Border" Binding="{Binding IsBought}" Value="False">
                                <Setter Property="Opacity" Value="1" />
                            </DataTrigger>
                        </Border.Triggers>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>