<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:ShoppingList.ViewModels"
             xmlns:models="clr-namespace:ShoppingList.Models"
             x:Class="ShoppingList.Views.ShoppingListPage"
             x:DataType="viewModels:ShoppingListViewModel"
             x:Name="RootPage"
             Title="Lista Zakupow">
    <ContentPage.BindingContext>
        <viewModels:ShoppingListViewModel />
    </ContentPage.BindingContext>

    <Grid Padding="10" RowSpacing="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" /> 
            <RowDefinition Height="*" />   
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Text="Dodaj produkt" Clicked="OnAddItemClicked" />

        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding Items}"
                        SelectionMode="None"
                        VerticalOptions="FillAndExpand">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:ListItemModel">
                    <Frame x:Name="Item" Margin="5" Padding="10" CornerRadius="6">
                        <FlyoutBase.ContextFlyout>
                            <MenuFlyout BindingContext="{Binding Source={x:Reference Item}, Path=BindingContext}">
                                <MenuFlyoutItem Text="UsuÅ„"
                                                Clicked="OnDeleteClicked"
                                                CommandParameter="{Binding .}" />
                            </MenuFlyout>
                        </FlyoutBase.ContextFlyout>

                        <VerticalStackLayout Spacing="6">
                            <Label Text="{Binding Name}" FontSize="18" />
                            <HorizontalStackLayout Spacing="0">
                                <Label Text="{Binding Amount, StringFormat='Ilosc: {0}'}" />
                                <Label Text="{Binding Unit, StringFormat='{0}'}" />
                            </HorizontalStackLayout>
                            <Label Text="{Binding Category, StringFormat='Kategoria: {0}'}" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>