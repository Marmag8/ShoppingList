<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:ShoppingList.ViewModels"
             x:Class="ShoppingList.Views.ShoppingListPage"
             x:DataType="viewModels:ShoppingListViewModel"
             Title="Lista Zakupow">
  <ContentPage.BindingContext>
    <viewModels:ShoppingListViewModel />
  </ContentPage.BindingContext>

  <Grid Padding="10" RowSpacing="8" Margin="0">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

        <ScrollView Grid.Row="0" HeightRequest="100" Orientation="Horizontal" HorizontalScrollBarVisibility="Always">
            <HorizontalStackLayout  Spacing="10">
                <Button Text="Dodaj Produkt" Clicked="OnAddItemClicked" HeightRequest="50" />
                <Button Text="Generuj ListÄ™ do Sklepu" Clicked="OpenStorePage" HeightRequest="50" />
                <Button Text="Importuj (*.xml)" Clicked="OnImportClicked" HeightRequest="50" />
                <Button Text="Eksportuj (*.xml)" Clicked="OnExportClicked" HeightRequest="50" />
            </HorizontalStackLayout>
        </ScrollView>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout x:Name="CategoriesLayout" Spacing="12" />
        </ScrollView>
    </Grid>
</ContentPage>