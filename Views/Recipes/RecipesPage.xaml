<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:ShoppingList.ViewModels"
             xmlns:recipeViews="clr-namespace:ShoppingList.Views.Recipes"
             x:Class="ShoppingList.Views.Recipes.RecipesPage"
             x:DataType="viewModels:RecipesViewModel"
             Title="Przepisy">
  <ContentPage.BindingContext>
    <viewModels:RecipesViewModel />
  </ContentPage.BindingContext>

  <Grid Padding="10" RowSpacing="8">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <Label Grid.Row="0" Text="Przepisy" FontSize="24" FontAttributes="Bold" />

    <ScrollView Grid.Row="1">
      <VerticalStackLayout x:Name="CategoriesLayout" Spacing="12" />
    </ScrollView>
  </Grid>
</ContentPage>